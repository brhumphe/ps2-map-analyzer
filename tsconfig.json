{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["frontend/src/*"]
    },
    "outDir": "./frontend/dist",
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": false,
    "noImplicitAny": false
  },
  "include": ["frontend/src/**/*", "vite.config.ts"],
  "exclude": ["node_modules", "frontend/dist", "backend", "tests", ".venv"]
}
